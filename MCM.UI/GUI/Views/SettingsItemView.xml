<Prefab>
  <Window>
    <ButtonWidget HeightSizePolicy="Fixed" WidthSizePolicy="StretchToParent" SuggestedHeight="75" Brush="MCMv3.Setting.Item" Command.Click="ExecuteSelect"
                  IsSelected="@IsSelected" DoNotPassEventsToChildren="true" ClipContents="true">
      <Children>
        <RichTextWidget Text="@DisplayName" HeightSizePolicy="CoverChildren" WidthSizePolicy="CoverChildren" HorizontalAlignment="Left" VerticalAlignment="Center"
                    MarginLeft="10" Brush="MCMv3.Item.Name"/>
      </Children>
    </ButtonWidget>
  </Window>
</Prefab>
