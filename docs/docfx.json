{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "MCM/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ],
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "xref": [
      "xrefs/Newtonsoft.Json-xrefmap.yml",
      "https://butr.github.io/Bannerlord.ReferenceAssemblies.Documentation/xrefmap.yml"
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "CNAME"
        ]
      },
      {
        "files": [ "resources/**" ],
        "src": "../"
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_enableSearch": "true",
      "_appTitle": "MCM Documentation",
      "_appFooter": "Â© 2020 Aragas",
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "custom"
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
